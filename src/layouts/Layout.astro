---
import Footer from '@components/astro/Footer.astro';
import Navigation from '@components/react/Navigation.tsx';
import { ViewTransitions } from 'astro:transitions';
import { fade } from 'astro:transitions';
import '../styles/global.css';

type Props = {
  metaTitle: string;
};

const { metaTitle } = Astro.props;
---

<html lang='en'>
  <head transition:animate={fade({ duration: '0.4s' })}>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.ico' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <meta name='description' content='Victor Fuentes - Nicaraguan painter and poet. Explore original oil paintings and poetry.' />
    <meta name='generator' content={Astro.generator} />
    <title>{`${metaTitle} | Victor Fuentes Art`}</title>
    <ViewTransitions />
  </head>
  <body class='min-h-screen flex flex-col' style='background-color: var(--bg-primary); color: var(--text-primary);'>
    <Navigation client:load />
    <main class='flex-1'>
      <slot />
    </main>
    <Footer />
  </body>
</html>
