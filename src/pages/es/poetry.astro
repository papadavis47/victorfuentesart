---
import Layout from '@layouts/Layout.astro';
import PoemCard from '@components/astro/Poetry/PoemCard.astro';
import { poems } from '@/data/poems';
import { t } from '@/i18n';

const locale = 'es';
---

<Layout metaTitle={t(locale, 'poetry.title')}>
  <div class='max-w-6xl mx-auto px-6 py-16'>
    <!-- Page Header -->
    <header class='text-center mb-16'>
      <h1
        class='font-serif text-4xl md:text-5xl mb-4'
        style='color: var(--text-primary);'
      >
        {t(locale, 'poetry.title')}
      </h1>
      <p class='text-lg' style='color: var(--text-secondary);'>
        Palabras que pintan el alma
      </p>
    </header>

    <!-- Poems Grid -->
    <section class='grid grid-cols-1 md:grid-cols-2 gap-8'>
      {poems.map((poem) => (
        <PoemCard poem={poem} locale='es' />
      ))}
    </section>
  </div>
</Layout>
