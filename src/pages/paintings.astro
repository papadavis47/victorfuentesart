---
import Layout from "@layouts/Layout.astro";
import PageHeader from "@components/astro/PageHeader.astro";
import GalleryGrid from "@components/react/GalleryGrid";

// Recent paintings
import danceInTheSnow from "@assets/images/recent-paintings/dance-in-the-snow.webp";
import fruitVendors from "@assets/images/recent-paintings/fruit-vendors.webp";
import landscapeII from "@assets/images/recent-paintings/landscape-II.webp";
import landscapeIV from "@assets/images/recent-paintings/landscape-IV.webp";
import landscape from "@assets/images/recent-paintings/landscape.webp";
import marketVendor from "@assets/images/recent-paintings/market-vendor.webp";

// Island paintings
import isla from "@assets/images/isla.webp";
import ometepe from "@assets/images/ometepe.webp";

// Figurative
import boy from "@assets/images/boy.webp";
import leon from "@assets/images/leon.webp";
import boyWithGourds from "@assets/images/boywithgourds.webp";

// Landscapes
import housesVolcano from "@assets/images/houses-volcano.webp";
import yellowSky from "@assets/images/yellow-sky.webp";

// Still life
import fruit from "@assets/images/fruit.webp";
import cuadro from "@assets/images/Cuadro.webp";

// Abstract
import colorfulShapes from "@assets/images/colorful-shapes.webp";

// Other works
import oilOnCanvas from "@assets/images/oil-on-canvas.webp";
import horses from "@assets/images/horses.webp";

const paintings = [
  { src: danceInTheSnow.src, alt: "Dance in the snow", title: "Dance in the Snow" },
  { src: fruitVendors.src, alt: "Fruit vendors at market", title: "Fruit Vendors", objectPosition: "top" },
  { src: landscape.src, alt: "Landscape painting", title: "Landscape" },
  { src: landscapeII.src, alt: "Landscape painting II", title: "Landscape II" },
  { src: landscapeIV.src, alt: "Landscape painting IV", title: "Landscape IV" },
  { src: marketVendor.src, alt: "Market vendor", title: "Market Vendor", objectPosition: "top" },
  {
    src: isla.src,
    alt: "Island of Ometepe painting",
    title: "Isla de Ometepe",
  },
  { src: ometepe.src, alt: "View of Ometepe volcano", title: "Ometepe" },
  { src: boy.src, alt: "Boy carrying water", title: "Boy Carrying Water", objectPosition: "top" },
  { src: leon.src, alt: "León street scene with tile roofs", title: "León" },
  { src: boyWithGourds.src, alt: "Boy with gourds and mangoes", title: "Boy with Gourds" },
  {
    src: housesVolcano.src,
    alt: "Houses with volcano backdrop",
    title: "Houses and Volcano",
  },
  { src: yellowSky.src, alt: "Houses under yellow sky", title: "Yellow Sky" },
  { src: fruit.src, alt: "Still life with fruit", title: "Fruit" },
  { src: cuadro.src, alt: "Still life composition", title: "Cuadro" },
  {
    src: colorfulShapes.src,
    alt: "Abstract colorful shapes",
    title: "Colorful Shapes",
  },
  {
    src: oilOnCanvas.src,
    alt: "Oil painting on canvas",
    title: "Oil on Canvas",
  },
  { src: horses.src, alt: "Horses painting", title: "Horses" },
];
---

<Layout metaTitle="Paintings">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
    <PageHeader title="Paintings" />
    <p class="gallery-hint">
      <svg
        class="hint-icon"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.3-4.3"></path>
        <path d="M11 8v6"></path>
        <path d="M8 11h6"></path>
      </svg>
      Click any image to view larger
    </p>
    <GalleryGrid paintings={paintings} client:load />
  </div>
</Layout>

<style>
  .gallery-hint {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--text-secondary);
    letter-spacing: 0.02em;
    margin-bottom: 2rem;
    opacity: 0.8;
  }

  .hint-icon {
    opacity: 0.7;
  }
</style>
