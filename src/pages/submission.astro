---
import Layout from '@layouts/Layout.astro';
import CommonContainer from '@components/astro/CommonContainer.astro';
import Hero from '@components/astro/Hero.astro';
import SubmissionMessage from '@components/astro/SubmissionMessage.astro';
import OilPainting from '@assets/images/oil-on-canvas.jpg';
import { Image } from 'astro:assets';
---

<Layout metaTitle='Submission Success'>
  <article class='h-full pb-8'>
    <Hero title='Thank you!' />
    <CommonContainer>
      <SubmissionMessage />
      <Image width={400} height={500} src={OilPainting} alt='Oil Painting' class='' />
    </CommonContainer>
  </article>
</Layout>
