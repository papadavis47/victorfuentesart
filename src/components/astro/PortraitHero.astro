---
import { Image } from "astro:assets";
import mainPortrait from "@assets/images/main-portrait.webp";
import { t, type Locale } from "@/i18n";

type Props = {
  locale?: Locale;
};

const { locale = "en" } = Astro.props;
---

<section class="portrait-hero">
  <div class="portrait-container">
    <div class="portrait-wrapper animate-fade-in-up">
      <Image
        src={mainPortrait}
        alt="Victor Fuentes portrait"
        class="portrait-image"
        width={320}
        height={320}
        fetchpriority="high"
      />
    </div>
    <div
      class="text-content animate-fade-in-up"
      style="animation-delay: 200ms;"
    >
      <h1 class="artist-name">{t(locale, "home.heroTitle")}</h1>
      <p class="subtitle">{t(locale, "home.heroSubtitle")}</p>
    </div>
  </div>
</section>

<style>
  .portrait-hero {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 1.5rem;
    background-color: var(--bg-primary);
  }

  .portrait-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
  }

  .portrait-wrapper {
    position: relative;
  }

  .portrait-image {
    width: 280px;
    height: 280px;
    object-fit: cover;
    object-position: top;
    border-radius: 50%;
    box-shadow: var(--shadow-medium);
    transition: box-shadow var(--transition-medium);
  }

  .portrait-image:hover {
    box-shadow: var(--shadow-lift);
  }

  .text-content {
    text-align: center;
  }

  .artist-name {
    font-family: var(--font-serif);
    font-size: 3rem;
    font-weight: 500;
    color: var(--text-primary);
    margin: 0 0 0.75rem 0;
    letter-spacing: -0.02em;
  }

  .subtitle {
    font-family: var(--font-sans);
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin: 0;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    font-weight: 400;
  }

  @media (min-width: 768px) {
    .portrait-hero {
      min-height: 85vh;
      padding: 6rem 2rem;
    }

    .portrait-image {
      width: 460px;
      height: 460px;
    }

    .artist-name {
      font-size: 4rem;
    }

    .subtitle {
      font-size: 1.25rem;
    }
  }
</style>
