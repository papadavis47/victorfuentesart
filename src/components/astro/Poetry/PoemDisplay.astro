---
export interface PoemLine {
  id: number;
  englishLine: string;
  spanishLine: string;
}

type Props = {
  title: string;
  lines: PoemLine[];
  showSpanish?: boolean;
};

const { title, lines, showSpanish = false } = Astro.props;
---

<div>
  <h2
    class='font-serif text-2xl md:text-3xl mb-6 italic'
    style='color: var(--text-primary);'
  >
    {title}
  </h2>
  <div class='space-y-1'>
    {lines.map((item) => {
      const line = showSpanish ? item.spanishLine : item.englishLine;
      return line && (
        <p
          class='text-base md:text-lg leading-relaxed'
          style='color: var(--text-secondary);'
        >
          {line}
        </p>
      );
    })}
  </div>
</div>
