---
type Props = {
  contactName: string;
  redirectTo?: string;
};

const { contactName, redirectTo = '/submission' } = Astro.props;
---

<form
  action={redirectTo}
  method='POST'
  class='max-w-xl mx-auto'
  name={contactName}
  data-netlify='true'
>
  <input type='hidden' name='form-name' value={contactName} />

  <div class='space-y-6'>
    <!-- Name Field -->
    <div>
      <label
        for='name'
        class='block text-sm font-medium mb-2'
        style='color: var(--text-primary);'
      >
        Name
      </label>
      <input
        type='text'
        name='name'
        id='name'
        required
        autocomplete='name'
        class='w-full px-4 py-3 rounded-lg text-base transition-all duration-200'
        style='
          background-color: var(--bg-card);
          border: 1px solid var(--border-subtle);
          color: var(--text-primary);
        '
        onfocus="this.style.borderColor='var(--accent-terracotta)'; this.style.boxShadow='0 0 0 3px rgba(196, 112, 75, 0.1)';"
        onblur="this.style.borderColor='var(--border-subtle)'; this.style.boxShadow='none';"
      />
    </div>

    <!-- Email Field -->
    <div>
      <label
        for='email'
        class='block text-sm font-medium mb-2'
        style='color: var(--text-primary);'
      >
        Email
      </label>
      <input
        type='email'
        name='email'
        id='email'
        required
        autocomplete='email'
        class='w-full px-4 py-3 rounded-lg text-base transition-all duration-200'
        style='
          background-color: var(--bg-card);
          border: 1px solid var(--border-subtle);
          color: var(--text-primary);
        '
        onfocus="this.style.borderColor='var(--accent-terracotta)'; this.style.boxShadow='0 0 0 3px rgba(196, 112, 75, 0.1)';"
        onblur="this.style.borderColor='var(--border-subtle)'; this.style.boxShadow='none';"
      />
    </div>

    <!-- Message Field -->
    <div>
      <label
        for='message'
        class='block text-sm font-medium mb-2'
        style='color: var(--text-primary);'
      >
        Message
      </label>
      <textarea
        name='message'
        id='message'
        rows='5'
        required
        class='w-full px-4 py-3 rounded-lg text-base transition-all duration-200 resize-none'
        style='
          background-color: var(--bg-card);
          border: 1px solid var(--border-subtle);
          color: var(--text-primary);
        '
        onfocus="this.style.borderColor='var(--accent-terracotta)'; this.style.boxShadow='0 0 0 3px rgba(196, 112, 75, 0.1)';"
        onblur="this.style.borderColor='var(--border-subtle)'; this.style.boxShadow='none';"
      ></textarea>
    </div>

    <!-- Submit Button -->
    <div class='pt-4'>
      <button
        type='submit'
        class='w-full py-3 px-6 rounded-lg text-base font-medium text-white transition-all duration-200 hover:opacity-90'
        style='background-color: var(--accent-terracotta);'
      >
        Send Message
      </button>
    </div>
  </div>
</form>
