---
import { Image } from "astro:assets";

export interface Props {
  image: ImageMetadata;
  alt: string;
  content: string[];
}

const { image, alt, content } = Astro.props;
---

<article
  class="bg-zinc-600 text-slate-100 shadow-xl rounded-lg overflow-hidden"
>
  <div class="p-4 lg:p-5">
    <div class="flex flex-col lg:flex-row gap-6 lg:gap-8">
      <div class="flex-shrink-0">
        <Image
          src={image}
          alt={alt}
          width="400"
          height="400"
          class="w-full lg:w-80 xl:w-96 h-auto object-cover rounded-lg shadow-md"
        />
      </div>
      <div class="flex-1 text-base lg:text-lg leading-relaxed">
        {
          content.map((paragraph, index) => (
            <p class="mb-4 first-line:text-lg first-line:font-medium first-letter:text-2xl first-letter:font-bold first-letter:mr-1">
              {paragraph}
            </p>
          ))
        }
      </div>
    </div>
  </div>
</article>